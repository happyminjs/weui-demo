/**index.wxss**/

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 搜索 start */
.search {
  width: 750rpx;
}
.opacity {
  opacity: 0.8;
  position: relative;
  z-index: 2;
}
/* 搜索 end */

/* tabs start */
.weui-tabs-bar__wrp {
  border-bottom: 1px solid #eee;
  margin-top: 10px;
}
.weui-tabs-swiper {
  width: 100%;
}
.weui-tabs-bar__title {
  margin: 0px 10px;
}
.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}
.tab-content {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  line-height: 0;
  padding: 10px 5px;
}
/* tabs end */

/* tabs list css start */
.list-item {
  flex-shrink: 0;
  flex-grow: 0;
  position: relative;
  width: 50%;
  box-sizing: border-box;
  padding: 0 5px;
}
.list-item .img {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}
.list-item .title {
  display: block;
  font-size: 12px;
  line-height: 14px;
}
/* tabs list css end */


/* 测试数据样式 start */
.swiper-items{
  display: block;
  height: 550px;
}
